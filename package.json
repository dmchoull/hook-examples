{
  "name": "hook-examples",
  "version": "1.0.0",
  "description": "Some examples of using React Hooks",
  "author": "David <dmchoull@gmail.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint test pages __tests__"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.12.4",
    "next": "^8.0.3",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "babel-jest": "^24.1.0",
    "dom-testing-library": "^3.16.8",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-react-hooks": "^1.4.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "jest-watch-typeahead": "^0.2.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-testing-library": "^6.0.0",
    "yarnhook": "^0.4.0"
  }
}
